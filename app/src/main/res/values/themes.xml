<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.StalcraftObserver" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
    </style>
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation
        duration. -->
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="colorPrimary">@color/black</item>

        <!-- Use windowSplashScreenAnimatedIcon to add a drawable or an animated
             drawable. One of these is required. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/app_logo</item>

        <!-- Set the theme of the Activity that directly follows your splash
        screen. This is required. -->
        <item name="postSplashScreenTheme">@style/Theme.StalcraftObserver</item>

    </style>
</resources>